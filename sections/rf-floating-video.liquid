{% comment %}
  Section: RF Floating Video
  Description: 左下角悬浮视频，支持本地上传(MP4)和YouTube链接
  Engineer: Shopify Expert
{% endcomment %}

{%- style -%}
  /* 基础容器定位 */
  .rf-floating-container {
    position: fixed;
    bottom: 20px;
    left: 20px;
    width: 180px; /* 默认宽度，可根据需要调整 */
    aspect-ratio: 9 / 16; /* 保持竖屏比例，如果是横屏视频改成 16/9 */
    z-index: 9999;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 10px 25px rgba(0,0,0,0.2);
    transition: all 0.3s ease;
    opacity: 0; /* 初始隐藏，JS加载后显示 */
    visibility: hidden;
    transform: translateY(20px);
  }

  /* 出现动画状态 */
  .rf-floating-container.rf-visible {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  /* 关闭状态 */
  .rf-floating-container.rf-closed {
    display: none !important;
  }

  /* 视频外层包裹 */
  .rf-video-wrapper {
    width: 100%;
    height: 100%;
    position: relative;
    background: #000;
  }

  /* 视频元素通用样式 */
  .rf-video-element,
  .rf-video-wrapper iframe {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border: none;
    display: block;
  }

  /* 关闭按钮 */
  .rf-close-btn {
    position: absolute;
    top: 8px;
    right: 8px;
    background: rgba(0, 0, 0, 0.5);
    color: #fff;
    border: none;
    border-radius: 50%;
    width: 24px;
    height: 24px;
    cursor: pointer;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;
    line-height: 1;
    backdrop-filter: blur(4px);
  }

  .rf-close-btn:hover {
    background: rgba(0, 0, 0, 0.8);
  }

  /* 移动端适配 */
  @media screen and (max-width: 768px) {
    .rf-floating-container {
      width: 140px; /* 移动端稍微小一点 */
      bottom: 80px; /* 避开底部导航栏或加购按钮 */
      left: 15px;
    }
  }
{%- endstyle -%}

<div id="rf-floating-video-{{ section.id }}" class="rf-floating-container">
  
  <button class="rf-close-btn" aria-label="Close video" onclick="closeRfVideo(this)">
    &times;
  </button>

  <div class="rf-video-wrapper">
    {%- if section.settings.video_upload != blank -%}
      {{ section.settings.video_upload | video_tag: 
        image_size: '300x', 
        autoplay: true, 
        loop: true, 
        muted: true, 
        controls: false, 
        playsinline: true,
        class: 'rf-video-element' 
      }}
    
    {%- elsif section.settings.video_url != blank -%}
      {%- if section.settings.video_url.type == 'youtube' -%}
        <iframe 
          src="https://www.youtube.com/embed/{{ section.settings.video_url.id }}?autoplay=1&mute=1&controls=0&loop=1&playlist={{ section.settings.video_url.id }}&enablejsapi=1&rel=0" 
          allow="autoplay; encrypted-media" 
          allowfullscreen
          title="Floating Video">
        </iframe>
      {%- elsif section.settings.video_url.type == 'vimeo' -%}
        <iframe 
          src="https://player.vimeo.com/video/{{ section.settings.video_url.id }}?autoplay=1&muted=1&loop=1&background=1" 
          allow="autoplay; encrypted-media" 
          allowfullscreen
          title="Floating Video">
        </iframe>
      {%- endif -%}
    
    {%- else -%}
      <div style="display:flex;align-items:center;justify-content:center;height:100%;color:#fff;font-size:12px;text-align:center;padding:10px;">
        请在后台上传视频
      </div>
    {%- endif -%}
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    var container = document.getElementById('rf-floating-video-{{ section.id }}');
    
    // 检查 sessionStorage，如果用户在这个会话中关闭过，就不再显示
    if (!sessionStorage.getItem('rf_video_closed')) {
      // 延迟 1 秒显示，增加交互感
      setTimeout(function() {
        container.classList.add('rf-visible');
      }, 1000);
    }
  });

  function closeRfVideo(btn) {
    var container = btn.closest('.rf-floating-container');
    container.classList.remove('rf-visible');
    
    // 动画结束后完全移除 display
    setTimeout(function() {
      container.classList.add('rf-closed');
    }, 300);

    // 记录关闭状态 (SessionStorage: 关闭浏览器后重置; LocalStorage: 永久记住)
    sessionStorage.setItem('rf_video_closed', 'true');
  }
</script>

{% schema %}
{
  "name": "RF Floating Video",
  "tag": "section",
  "class": "section-rf-floating-video",
  "settings": [
    {
      "type": "header",
      "content": "视频源设置",
      "info": "优先显示上传的文件。如果未上传文件，则使用 URL。"
    },
    {
      "type": "video",
      "id": "video_upload",
      "label": "上传视频文件 (MP4)",
      "info": "推荐使用 9:16 竖屏视频"
    },
    {
      "type": "video_url",
      "id": "video_url",
      "label": "或使用视频链接",
      "accept": ["youtube", "vimeo"],
      "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc",
      "info": "支持 YouTube 或 Vimeo"
    },
    {
      "type": "header",
      "content": "外观设置"
    },
    {
      "type": "range",
      "id": "width_desktop",
      "min": 100,
      "max": 400,
      "step": 10,
      "unit": "px",
      "label": "桌面端宽度",
      "default": 180
    }
  ],
  "presets": [
    {
      "name": "RF Floating Video"
    }
  ]
}
{% endschema %}