{%- style -%}
  .rf-floating-container {
    position: fixed;
    bottom: 20px;
    left: 20px;
    width: 180px;
    aspect-ratio: 9 / 16;
    z-index: 9999;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 10px 25px rgba(0,0,0,0.2);
    transition: all 0.3s ease;
    opacity: 0;
    visibility: hidden;
    transform: translateY(20px);
    background: #000;
  }
  .rf-floating-container.rf-visible {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }
  .rf-floating-container.rf-closed {
    display: none !important;
  }
  .rf-video-wrapper {
    width: 100%;
    height: 100%;
    position: relative;
    background: #000;
  }
  .rf-video-element,
  .rf-video-wrapper iframe {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border: none;
    display: block;
  }
  .rf-close-btn {
    position: absolute;
    top: 8px;
    right: 8px;
    background: rgba(0, 0, 0, 0.5);
    color: #fff;
    border: none;
    border-radius: 50%;
    width: 24px;
    height: 24px;
    cursor: pointer;
    z-index: 20;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;
    line-height: 1;
    backdrop-filter: blur(4px);
  }
  .rf-close-btn:hover {
    background: rgba(0, 0, 0, 0.8);
  }
  @media screen and (max-width: 768px) {
    .rf-floating-container {
      width: 140px;
      bottom: 80px;
      left: 15px;
    }
  }
{%- endstyle -%}

<div id="rf-floating-video-{{ section.id }}" class="rf-floating-container">
  <button class="rf-close-btn" aria-label="Close video" onclick="closeRfVideo(this)">
    &times;
  </button>

  <div class="rf-video-wrapper">
    {%- if section.settings.video_upload != blank -%}
      {{ section.settings.video_upload | video_tag: 
        image_size: '300x', 
        autoplay: true, 
        loop: true, 
        muted: true, 
        controls: false, 
        playsinline: true,
        class: 'rf-video-element' 
      }}
    {%- elsif section.settings.tiktok_id != blank -%}
      <iframe 
        src="https://www.tiktok.com/embed/v2/{{ section.settings.tiktok_id }}?lang=en-US&amp;autoplay=1"
        allow="encrypted-media;"
        style="width: 100%; height: 100%; border: none;">
      </iframe>
    {%- elsif section.settings.video_url != blank -%}
      {%- if section.settings.video_url.type == 'youtube' -%}
        <iframe 
          src="https://www.youtube.com/embed/{{ section.settings.video_url.id }}?autoplay=1&mute=1&controls=0&loop=1&playlist={{ section.settings.video_url.id }}&enablejsapi=1&rel=0" 
          allow="autoplay; encrypted-media" 
          allowfullscreen
          title="Floating Video">
        </iframe>
      {%- elsif section.settings.video_url.type == 'vimeo' -%}
        <iframe 
          src="https://player.vimeo.com/video/{{ section.settings.video_url.id }}?autoplay=1&muted=1&loop=1&background=1" 
          allow="autoplay; encrypted-media" 
          allowfullscreen
          title="Floating Video">
        </iframe>
      {%- endif -%}
    {%- else -%}
      <div style="display:flex;align-items:center;justify-content:center;height:100%;color:#fff;font-size:12px;text-align:center;padding:10px;">
        No Video Source
      </div>
    {%- endif -%}
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    var container = document.getElementById('rf-floating-video-{{ section.id }}');
    if (!sessionStorage.getItem('rf_video_closed')) {
      setTimeout(function() {
        container.classList.add('rf-visible');
      }, 1000);
    }
  });

  function closeRfVideo(btn) {
    var container = btn.closest('.rf-floating-container');
    container.classList.remove('rf-visible');
    setTimeout(function() {
      container.classList.add('rf-closed');
    }, 300);
    sessionStorage.setItem('rf_video_closed', 'true');
  }
</script>

{% schema %}
{
  "name": "RF Floating Video",
  "tag": "section",
  "class": "section-rf-floating-video",
  "settings": [
    {
      "type": "header",
      "content": "Video Source (Priority: Upload > TikTok > URL)"
    },
    {
      "type": "video",
      "id": "video_upload",
      "label": "Upload Video (MP4)"
    },
    {
      "type": "text",
      "id": "tiktok_id",
      "label": "TikTok Video ID",
      "info": "Example: 7412345678901234567 (Found in the URL)"
    },
    {
      "type": "video_url",
      "id": "video_url",
      "label": "YouTube/Vimeo URL",
      "accept": ["youtube", "vimeo"],
      "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc"
    },
    {
      "type": "header",
      "content": "Appearance"
    },
    {
      "type": "range",
      "id": "width_desktop",
      "min": 100,
      "max": 400,
      "step": 10,
      "unit": "px",
      "label": "Desktop Width",
      "default": 180
    }
  ],
  "presets": [
    {
      "name": "RF Floating Video"
    }
  ]
}
{% endschema %}